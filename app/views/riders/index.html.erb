<h3>All Riders</h3>
<% current_user.riders.each do |rider| %>
<p><%= rider.name %> - <%= link_to "View Ride Schedule", rider_rides_path(rider)%></p>
    <%#= link_to "Schedule Ride", new_rider_ride_path(rider)%>
<% end %>

<h3>Add Rider</h3>
<% if flash[:error] %>
    <p id="error"><%= flash[:error] %></p>
<% end %>
<%= form_for Rider.new, url: riders_path do |f| %>
    <%= f.text_field :name %>
    <%= f.submit "Add Rider"%>
<% end %>