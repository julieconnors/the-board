<h3>All Riders</h3>
<% current_user.riders.each do |rider| %>
    <p><%= link_to rider.name, rider_path(rider)%></p>
<% end %>

<h3>Add Rider</h3>
<% if flash[:error] %>
    <p id="error"><%= flash[:error] %></p>
<% end %>
<%= form_for Rider.new, url: riders_path do |f| %>
    <%= f.text_field :name %>
    <%= f.submit "Add Rider"%>
<% end %>