<div class="info">
<h3>Schedule New Ride</h3>

    <% if @ride.errors.any? %>
    <div class="error">
    <% @ride.errors.full_messages.each do |message|%>
        <p><%= message %></p>
    <% end %>
    </div>
    <% end %>

<%= form_for @ride do |f| %>

    <%= f.label "Select a rider:" %>
    <%= f.collection_select(:rider_id, current_user.riders, :id, :name) %><br>

    <%= f.label "Select a horse:" %>
    <%= f.collection_select(:horse_id, current_user.horses, :id, :name) %><br>

    <p id="link"><%= link_to "Add Horse", new_horse_path%></p>

    <%= f.label :day %>
    <%= f.date_field :day %><br>

    <%= f.label :time%>
    <%= f.time_field :time %><br>

    <%= f.label :notes %>
    <%= f.text_area :notes %><br>

    <%= f.submit "Submit" %>
    <% end %>
</div>