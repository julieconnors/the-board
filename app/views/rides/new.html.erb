<%= form_for user_ride_path(@ride.user) do |f| %>
<%= f.label :rider_id %>
<%= f.collection_select(:rider_id, Rider.all, :id, :name) %><br>
<%= f.label :horse_id %>
<%= f.collection_select(:horse_id, Horse.all, :id, :name) %><br>
<%= f.label :time%>
<%= f.time_field :time %><br>
<%= f.label :location %>
<%= f.text_field :location %><br>
<%= f.label :notes %>
<%= f.text_area :notes %><br>
<%= f.submit "Add Ride" %>
<% end %>