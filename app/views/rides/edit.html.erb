<h3>Edit Ride</h3>
<%= form_for @ride do |f| %>
    <%= f.label :horse_id %>
    <%= f.collection_select(:horse_id, current_user.horses, :id, :name) %><br>

    <%= f.label :day %>
    <%= f.date_field :day %><br>

    <%= f.label :time%>
    <%= f.time_field :time %><br>

    <%= f.label :notes %>
    <%= f.text_area :notes %><br>
    
    <%= f.submit "Update Ride" %>
<% end %>