<h3>Select Rider to Schedule Ride</h3>
<% current_user.riders.each do |rider|%>
<%= link_to rider.name, rider_path(rider) %><br>
<% end %>


<br>
<% if flash[:error] %>
    <p id="error"><%= flash[:error] %></p>
<% end %>
<%= form_for Rider.new, url: riders_path do |f| %>
<%= f.text_field :name %>
<%= f.submit "Add Rider"%>
<% end %>
<br>

<h3>Today's Rides</h3>
<table>
    <th>Date</th>
    <th>Time</th>
    <th>Horse</th>
    <th>Rider</th>
    <th>Notes</th>
    <% todays_rides.each do |ride| %>
    <tr>
        <td><%= ride.format_date %></td>
        <td><%= ride.format_time %></td>
        <td><%= ride.horse.name %></td>
        <td><%= ride.rider.name %></td>
        <td><%= ride.notes %></td>
        <td><%= link_to "Update", edit_ride_path(ride) %></td>
        <td><%= button_to "Cancel", ride_path(ride), method: :delete %></td>
    </tr>
    <% end %>
</table>

<h3>Find Rides By Date</h3>
<%= form_tag ride_by_date_path do %>
<%= date_field_tag :day %>
<%= submit_tag "Find Rides"%>
<% end %>

<% if @rides != "" %>
    <h3><%= format_date_from_params(params) %></h3>
    <table>
    <th>Time</th>
    <th>Rider</th>
    <th>Horse</th>
    <th>Notes</th>

    <% @rides.each do |ride| %>
        <tr>
        <td><%= ride.format_time %></td>
        <td><%= ride.rider.name %></td>
        <td><%= ride.horse.name %></td>
        <td><%= ride.notes %></td>
        <td><%= link_to "Update", edit_ride_path(ride) %></td>
        <td><%= button_to "Cancel", ride_path(ride), method: :delete %></td>
        </tr>
    <% end %>
    </table>
<% end %>

