<h3>Select Rider or Horse to Schedule Ride</h3>
<h4>Riders</h4>
<% Rider.all.each do |rider|%>
<%= link_to rider.name, rider_path(rider) %><br>
<% end %>
<br>
<%= form_for Rider.new, url: riders_path do |f| %>
<%= f.label "Rider Name" %>
<%= f.text_field :name %>
<%= f.submit "Add Rider"%>
<% end %>

<%= form_for Horse.new, url: horses_path do |f| %>
<%= f.label "Horse Name" %>
<%= f.text_field :name  %>
<%= f.submit "Add Horse"%>
<% end %>

All Rides
<table>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th>Horse</th>
    <th>Rider</th>
    <th>Notes</th>
    <% Ride.all.each do |ride| %>
    <tr>
        <td><%= ride.format_date %></td>
        <td><%= ride.format_time %></td>
        <td><%= ride.location %></td>
        <td><%= ride.horse.name %></td>
        <td><%= ride.rider.name %></td>
        <td><%= ride.notes %></td>
    </tr>
    <% end %>
</table>

<%= link_to "Add Horse", new_horse_path %>