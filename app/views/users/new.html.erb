<% if @user.errors.any? %>
    <div class="error">
    <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
    </div>
<% end %>
<div class="display">
    <%= form_for @user do |f| %>
    
        <%= f.label :name %>
        <%= f.text_field :name %><br>

        <%= f.label :email %>
        <%= f.text_field :email %><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.submit "Register"%>
    <% end %>
</div>