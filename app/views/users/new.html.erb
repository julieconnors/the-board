<% if @user.errors.any? %>
    <div class="error">
    <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
    </div>
<% end %>
<div class="display">
    <%= form_for @user do |f| %>

    <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
        <%= label_tag :name %>
        <%= text_field_tag :name %><br>
    </div>

    <div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
        <%= label_tag :email %>
        <%= text_field_tag :email %><br>
    </div>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.submit "Register"%>
    <% end %>
</div>