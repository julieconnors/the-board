<% if @user.errors.any? %>
    <div class="error">
    <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
    </div>
<% end %>
<div class="info"><br>

    <%= form_for @user do |f| %>

    <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
        <%= f.label :name %>
        <%= f.text_field :name %><br>
    </div>

    <div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
        <%= f.label :email %>
        <%= f.text_field :email %><br>
    </div>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.submit "Register"%>
    <% end %>
</div>