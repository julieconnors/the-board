<h3>Add Horse</h3>
    <% if @horse.errors.any? %>
    <div id="error">
        <% @horse.errors.full_messages.each do |message| %>
            <p><%= message %></p>
        <% end %>
    </div>
    <% end %>

<%= form_for @horse, url: horses_path do |f| %>
    <div class="field<%= ' field_with_errors' if @horse.errors[:name].any? %>">
        <%= f.label :name %>
        <%= f.text_field :name %><br>
    </div>

    <%= f.label :nickname %>
    <%= f.text_field :nickname  %><br>
    
    <%= f.label :owner %>
    <%= f.text_field :owner  %><br>

    <%= f.submit "Add Horse"%>
    <% end %>
