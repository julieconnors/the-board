<h3>Edit Horse</h3>
<%= form_for @horse do |f| %>
    <% if flash[:name_error] %>
        <p><%= flash[:name_error] %></p>
    <% end %>
<%= f.label :name %>
<%= f.text_field :name  %><br>
    <% if flash[:nickname_error] %>
        <p><%= flash[:nickname_error] %></p>
    <% end %>
<%= f.label :nickname %>
<%= f.text_field :nickname  %><br>
    <% if flash[:owner_error] %>
        <p><%= flash[:owner_error] %></p>
    <% end %>
<%= f.label :owner %>
<%= f.text_field :owner  %><br>
<%= f.submit "Update"%>
<% end %>