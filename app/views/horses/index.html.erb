<table class="show">
<h3>All Horses</h3>
<th>Horse</th>
<th>Owner</th>
<% current_user.horses.each do |horse| %>
<tr>
<td><strong><%= link_to horse.name, horse_path(horse.id) %></strong></td> 
<td><%= horse.owner %></td>


</tr>
<% end %>
</table>
<h3>Add Horse</h3>
<%= form_for Horse.new, url: horses_path do |f| %>
    <% if flash[:name_error] %>
        <p id="error"><%= flash[:name_error] %></p>
    <% end %>
<%= f.label :name %>
<%= f.text_field :name  %><br>
    <% if flash[:owner_error] %>
        <p id="error"><%= flash[:owner_error] %></p>
    <% end %>
<%= f.label :owner %>
<%= f.text_field :owner  %><br>
<%= f.submit "Add Horse"%>
<% end %>
