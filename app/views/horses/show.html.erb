<%= @horse.name %>

All Rides

<table>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th>Rider</th>
    <th>Notes</th>
    <% @horse.rides.each do |ride| %>
    <tr>
        <td><%= ride.day %></td>
        <td><%= ride.time %></td>
        <td><%= ride.location %></td>
        <td><%= ride.rider.name %></td>
        <td><%= ride.notes %></td>
    </tr>
    <% end %>
</table>