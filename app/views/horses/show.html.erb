<h2><%= @horse.name %></h2>
Owner: <%= @horse.owner %>
<h3>All Rides</h3>

<table>
    <th>Date</th>
    <th>Time</th>
    <th>Rider</th>
    <th>Notes</th>
    <% @horse.rides.each do |ride| %>
    <tr>
        <td><%= ride.format_date %></td>
        <td><%= ride.format_time %></td>
        <td><%= ride.rider.name %></td>
        <td><%= ride.notes %></td>
    </tr>
    <% end %>
</table>